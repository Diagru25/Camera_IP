<body class="animsition">
    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="#">
                    <img src="/Assets/images/icon/logo-mta.jpg" alt="Monitor-Camera" style="width: 50px;"/>
