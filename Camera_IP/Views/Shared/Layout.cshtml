    <script src="/Assets/js/main.js"></script>

    <script type="text/javascript">
        $('#a_monitor').click(function () {
            $('ul').children().removeClass('active');
            $(this).parent().addClass('active');
        });

        $('#a_manage').click(function () {
            $('ul').children().removeClass('active');
            $(this).parent().addClass('active');
        })
    </script>
