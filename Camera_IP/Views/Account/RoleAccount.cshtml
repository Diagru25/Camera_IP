@model List<Camera_IP.Models.Account>

@{
    ViewBag.Title = "RoleAccount";
    Layout = "~/Views/Shared/Layout.cshtml";
    var num_role = 2;
}

@section jsRoleAccount{
    <script src="~/Assets/js/RoleAccount.js"></script>
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped">
                        <thead style="background-color: #333; color:#FFF">
                            <tr>
                                <th>Tên đăng nhập</th>
                                <th>Mật khẩu</th>
                                <th>Quyền</th>
                                <th class="text-middle">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Account_ID" data-role_id="@item.Role_ID">
                                    <td>@item.User_Name</td>
                                    <td>@item.Password</td>
                                    <td>
                                        <select  class="js-select role-select" name="property" data-id="@item.Role_ID">
                                            @{
                                                for (var i = 1; i <= num_role; i++)
                                                {
                                                    if (i == 1)
                                                    {
                                                        <option value="@i" selected>Root</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@i">Admin</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <button class="btn btn-success btn-sm btn_edit" >
                                            <i class="fa fa-cogs"></i> Xác nhận
                                        </button>
                                        <button class="btn btn-danger btn-sm btn_delete" data-id="@item.Account_ID">
                                            <i class="fa fa-ban"></i> Xóa
                                        </button>
                                    </td>
                                </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
