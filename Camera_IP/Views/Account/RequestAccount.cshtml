@model List<Camera_IP.Models.Account>
@{
    ViewBag.Title = "RequestAccount";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section jsRequestAccount{
    <script src="~/Assets/js/RequestAccount.js"></script>
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped">
                        <thead style="background-color: #333; color:#FFF">
                            <tr>
                                <th>Tên đăng nhập</th>
                                <th>Mật khẩu</th>
                                <th>Quyền</th>
                                <th class="text-middle">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.User_Name</td>
                                    <td>@item.Password</td>
                                    <td>@item.Role_Name</td>
                                    <td>
                                        <button class="btn btn-success btn-sm btn_edit" data-id="@item.Account_ID">
                                            <i class="fa fa-cogs"></i> Xác nhận
                                        </button>
                                        <button class="btn btn-danger btn-sm btn_delete" data-id="@item.Account_ID">
                                            <i class="fa fa-ban"></i> Từ chối
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

