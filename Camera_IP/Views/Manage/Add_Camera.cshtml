
@{
    ViewBag.Title = "Add_Camera";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section jsEdit{
    <script src="~/Assets/js/Edit.js"></script>
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">Thêm camera</div>
                    <div class="card-body">
                        <div class="card-title">
                            <h3 class="text-center title-2">Thêm camera vào hệ thống</h3>
                        </div>
                        <hr>
                        <div>
                            <div class="form-group">
                                <label for="cc-payment" class="control-label mb-1">Tên camera</label>
                                <input id="cc-pament" name="cc-payment" type="text" class="form-control" aria-required="true" aria-invalid="false">
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="cc-exp" class="control-label mb-1">Địa chỉ IP</label>
                                        <input id="cc-exp" name="cc-exp" type="tel" class="form-control cc-exp" value="" data-val="true" data-val-required="Please enter the card expiration"
                                               data-val-cc-exp="Please enter a valid month and year" placeholder="192.168.152.120"
                                               autocomplete="cc-exp">
                                        <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <label for="x_card_code" class="control-label mb-1">Cổng kết nôi</label>
                                    <div class="input-group">
                                        <input id="x_card_code" name="x_card_code" class="form-control cc-cvc" placeholder="8080" data-val="true" data-val-required="Please enter the security code"
                                               data-val-cc-cvc="Please enter a valid security code" autocomplete="off">

                                    </div>
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label for="cc-name" class="control-label mb-1">Loại camera</label>
                                <select id="select_type_camera" class="form-control">
                                    <option value="Panasonic">Panasonic</option>
                                    <option value="SmartPhone">SmartPhone</option>
                                    <option value="Webcam">Webcam</option>
                                </select>
                                @*
                                <input id="cc-name" name="cc-name" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Please enter the name on card"
                                       autocomplete="cc-name" aria-required="true" aria-invalid="false" aria-describedby="cc-name-error">
                                <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>*@
                            </div>
                            <div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Vị trí lắp đặt</label>
                                <input id="cc-number" name="cc-number" type="tel" class="form-control cc-number identified visa" value="" data-val="true"
                                       data-val-required="Please enter the card number" data-val-cc-number="Please enter a valid card number"
                                       autocomplete="cc-number">
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div>

                            <div>
                                <button id="payment-button-add" class="btn btn-lg btn-info btn-block">
                                    <i class="fa  fa-dot-circle-o"></i>&nbsp;
                                    <span id="payment-button-amount">Thêm vào hệ thông</span>
                                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


